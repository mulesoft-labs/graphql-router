schema {
	query: Query
	mutation: Mutation
}

type Query{
	hello: String,
	person(foo: String): Person
}

type Mutation {
	updatePerson(name: String, age: Int): Person
}

# This is the simple description of a humble person
type Person {
	#this is the name of the person.
	name: String,
	age: Int,
	active(query: String): Boolean,
    car: Car,
    bag: [Bag]
}

type Car {
	make: String,
	model: String,
	price: Float
}

type Bag {
    y: String,
    z: String,
}
